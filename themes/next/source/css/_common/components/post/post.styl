.post-body {
  font-family: $font-family-posts;
  +mobile() {
    word-break: break-word;
  }
}

.post-body .fancybox img {
  display: block !important;
  margin: 0 auto;
  cursor: pointer;
  cursor: zoom-in;
  cursor: -webkit-zoom-in;
}

.post-body .image-caption {
  margin: -20px auto 15px;
  text-align: center;
  font-size: $font-size-base;
  color: $grey-dark;
  font-weight: bold;
  line-height: 1;
}

.post-body .figure .caption {
  @extend .post-body .image-caption;
}

.post-sticky-flag {
  display: inline-block;
  font-size: 16px;
  -ms-transform: rotate(30deg);
  transform: rotate(30deg);
}

.use-motion {
  if hexo-config('motion.transition.post_block') {
    .post-block,
    .pagination,
    .comments { opacity: 0; }
  }
  if hexo-config('motion.transition.post_header') { .post-header { opacity: 0; } }
  if hexo-config('motion.transition.post_body') { .post-body { opacity: 0; } }
  if hexo-config('motion.transition.coll_header') { .collection-title { opacity: 0; } }
}

@import "post-expand";
@import "post-collapse";
@import "post-type";
@import "post-title";
@import "post-meta";
@import "post-button";
@import "post-tags";
@import "post-nav";
@import "post-eof";
@import "post-gallery";
@import "post-reward" if hexo-config('alipay') or hexo-config('wechatpay') or hexo-config('bitcoin');
@import "post-copyright" if hexo-config('post_copyright.enable');
@import "post-widgets" if (hexo-config('facebook_sdk.enable') and hexo-config('facebook_sdk.like_button')) or (hexo-config('vkontakte_api.enable') and hexo-config('vkontakte_api.like')) or hexo-config('rating.enable') or (hexo-config('needmoreshare2.enable') and hexo-config('needmoreshare2.postbottom.enable'));
@import "post-rtl";


.page-home .btn {
    display: inline-block;
    padding: 0 20px;
    font-size: 14px;
    color: blue;
    background: transparent;
    border: none;
    border-radius: 0;

}
.page-home .post-button.text-center {
  text-align: left;
}

.page-home .post-body {
  background: #f9f9f9;
  padding: 20px;
  font-size: 80%;
}

.page-home .posts-expand .post-meta {
    margin: 3px 0 20px 0;
    text-align: left;
}
.page-home .posts-expand .post-title {
    text-align: left;
}

.page-home .posts-expand {
     padding-top: 0px;
}

.page-home .posts-expand .post-eof {
    display: block;
    margin: 30px auto 30px;
    width: 100%;
    height: 1px;
    background: #ccc;
    text-align: center;
}

.posts-expand .post-title-link::before {
  bottom: -2px;
  background-color: #555555;
}
@media (min-width: 1147px) {
body .header {
    width: 1147px;
}

body .container .main-inner {
    width: 1147px;
}

body .content-wrap {
    width: 895px;
    min-height: 700px;
}
}
.posts-collapse .post-title a {
    color: #666;
    border-bottom: none;
    display: inline-block;
    width: 100%;
}

.posts-collapse .post-header {
    border-bottom: none;
}
.posts-collapse .post-header {
    background: #000000ba;
    border-radius: 20px;
    box-shadow: 0px 5px 4px 0px #ccc;
    transition: all .2s;
}
.posts-collapse .post-header:hover {
  background: #222222;
}

.posts-collapse .post-title a {
    color: #fff;
}


time.post-time {
    color: white;
}

a {
     border-bottom: none;
}

.tag-cloud a {
    display: inline-block;
    margin: 10px;
    background: #f0f0f0;
    color: #828282;
    font-size: 12px;
    border-radius: 21px;
    margin-left: 5px;
    margin-right: 0;
    padding: 5px 12px;
    line-height: 1.1em;
    text-decoration: none;
    vertical-align: baseline;
    display: inline-block;
}
a:hover {
    color: #111;
}
